<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/jicaiitem"
    android:background="@color/whites2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="vertical"
        android:background="@drawable/licaixq_background"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/pro_status"
            android:layout_height="18dp"
            android:layout_width="45dp"
            android:text="热卖"
            android:textSize="11dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:textColor="@color/whites"
            android:background="@drawable/grapefruit_background"
            >
        </TextView>

        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            android:textSize="16dp"
            android:textColor="@color/greyishBrown1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="9dp"
            android:gravity="left">

        </TextView>

    </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white2"
            />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_height="16dp"
                android:layout_width="wrap_content"
                android:text="@string/expected_annual_yield"
                android:textSize="12dp"
                android:textColor="@color/warmGrey4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                >
            </TextView>

            <TextView
                android:layout_height="16dp"
                android:layout_width="wrap_content"
                android:text="@string/financial_period"
                android:textSize="12dp"
                android:textColor="@color/warmGrey4"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                >
            </TextView>

            <TextView
                android:layout_height="16dp"
                android:layout_width="wrap_content"
                android:text="@string/remaining_sum"
                android:textColor="@color/warmGrey4"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                >
            </TextView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
            <TextView
                android:id="@+id/interestRate"
                android:layout_height="26dp"
                android:layout_width="wrap_content"
                android:text="0.0%"
                android:textSize="22dp"
                android:textColor="@color/coral"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                >
            </TextView>

            <TextView
                android:id="@+id/extralnterestRate"
                android:layout_height="24dp"
                android:layout_width="wrap_content"
                android:text="+0.0%"
                android:textSize="18dp"
                android:textColor="@color/coral"
                android:gravity="center"
                >
            </TextView>
                </LinearLayout>

            <TextView
                android:id="@+id/collectDuration"
                android:layout_height="26dp"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="22dp"
                android:textColor="@color/warmGrey1"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                >
            </TextView>

            <TextView
                android:id="@+id/remainAmt"
                android:layout_height="26dp"
                android:layout_width="wrap_content"
                android:text="0.00"
                android:textSize="22dp"
                android:textColor="@color/coral"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:scaleType="centerInside"
                >
            </TextView>

            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

    </LinearLayout>



