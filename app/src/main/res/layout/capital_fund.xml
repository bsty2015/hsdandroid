<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites2"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coral3"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="22dp"
                        android:src="@mipmap/zongzichan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/total_assets"
                        android:textColor="@color/whites"
                        android:textSize="10dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/totalCapital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="0.00"
                        android:textColor="@color/whites"
                        android:textSize="30dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingRight="30dp"
            android:gravity="right|center"
            android:id="@+id/dealDetailBar"
            android:paddingTop="23dp"
              >

            <ImageView

                android:layout_width="33dp"
                android:layout_height="25dp"
                android:src="@mipmap/capital_item"

                />
        </RelativeLayout>

    </RelativeLayout>




    <LinearLayout
            android:id="@+id/rgChannelContent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/whites"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/rgChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


            </RadioGroup>
        </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <com.jc.ui.CustomerViewPager
        android:id="@+id/vpNewsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


    </com.jc.ui.CustomerViewPager>


</LinearLayout>
