<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites2"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:src="@mipmap/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="当前版本为2.0v"
                android:textColor="@color/warmGrey2"
                android:textSize="10dp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/progressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp">

            <LinearLayout
                android:id="@+id/update_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="26dp"
                    android:background="@color/white2" />

                <LinearLayout
                    android:id="@+id/gengxin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/whites"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/app_is_need_download_info"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black3"
                        android:textSize="12dp"
                        android:text="当前为最新版本"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white2" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="348dp">

            <com.jc.customview.NumberProgressBar
                android:id="@+id/show_version_update_info"
                style="@style/NumberProgressBar_Default"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
