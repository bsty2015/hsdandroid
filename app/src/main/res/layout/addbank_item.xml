<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                >
                <ImageView
                    android:id="@+id/bankICO"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/bankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="16dp"
                        android:textColor="@color/greyishBrown1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="储蓄卡"
                        android:textSize="12dp"
                        android:textColor="@color/warmGrey2"
                        android:layout_marginLeft="10dp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/cardNo"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text=" "
                    android:textColor="@color/warmGrey1"
                    android:textSize="15dp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="30dp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:orientation="horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="6dp"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:text="卡片限额"
                android:textSize="8dp"
                android:gravity="center"
                android:textColor="@color/whites"
                android:background="@drawable/bank_background"
                />
            <TextView
                android:id="@+id/limitAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5万/笔.50万/日.50万/月"
                android:textColor="@color/warmGrey3"
                android:textSize="12dp"
                android:layout_marginLeft="6dp"
                />

        </LinearLayout>



    </LinearLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:background="@color/whites2"
        />


</LinearLayout>

