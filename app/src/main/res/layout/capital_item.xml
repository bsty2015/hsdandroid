<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/whites2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_number"
                    android:textSize="10dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginLeft="18dp"

                    />

                <TextView
                    android:id="@+id/capitalOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="10dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/capitalDateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="10dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="23dp"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white2"
                android:layout_marginTop="4dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@color/whites"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/capitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新天地1号"
                        android:textSize="10dp"
                        android:textColor="@color/warmGrey3"
                        android:layout_marginLeft="18dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >


                    <TextView
                        android:id="@+id/capitalCorpus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="16dp"
                        android:textColor="@color/black3"
                        android:layout_marginLeft="18dp"

                        />
                    <TextView
                        android:id="@+id/capitalProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="16dp"
                        android:textColor="@color/coral3"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_marginLeft="205dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:text="@string/purchase_principal"
                        android:textSize="10dp"
                        android:textColor="@color/warmGrey3"
                        android:layout_marginLeft="18dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:text="@string/income_time"
                        android:textSize="10dp"
                        android:textColor="@color/warmGrey3"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        />


                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/whites2"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
