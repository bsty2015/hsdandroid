<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites2"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/whites"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_number"
                android:textSize="12dp"
                android:textColor="@color/black3"
                />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textSize="12dp"
                android:textColor="@color/black3"
                android:layout_marginLeft="3dp"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white2"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="3dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新天地1号"
                android:textSize="14dp"
                android:textColor="@color/black2"
                android:layout_marginLeft="28dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_amountt"
                android:textSize="12dp"
                android:textColor="@color/warmGrey2"
                android:layout_marginLeft="28dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anticipated_income"
                android:textSize="12dp"
                android:textColor="@color/warmGrey2"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >


            <TextView
                android:id="@+id/proCorpus"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="23dp"
                android:textColor="@color/black3"
                android:layout_marginLeft="28dp"

                />
            <TextView
                android:id="@+id/proProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="23dp"
                android:textColor="@color/coral3"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="90dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white2"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="55dp"
                android:layout_height="18dp"
                android:text="@string/order_status"
                android:textSize="10dp"
                android:textColor="@color/whites"
                android:background="@drawable/coral_background"
                android:gravity="center"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/investICON"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/compelet"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/investDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-21 15:45:34 购买"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/warmGrey7"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="28dp"
            android:background="@color/salmon2"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="18dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/repayICON"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/uncompelet"
                android:layout_marginLeft="28dp"
                />
            <TextView
                android:id="@+id/repayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="将于2015_08_21 兑付"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/warmGrey7"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/white_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="55dp"
            android:layout_height="18dp"
            android:text="@string/payment_informationt"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/coral_background"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/whites"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/bankICO"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/abc"
                    android:layout_marginLeft="22dp"

                    />


                <TextView
                    android:id="@+id/bankInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国农业银行 (尾号0527)"
                    android:textColor="@color/black3"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/white_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="55dp"
            android:layout_height="18dp"
            android:text="@string/contract"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/coral_background"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/contract"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/whites"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/xieyi"
                    android:layout_marginLeft="22dp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应收帐款转让及回购协议"
                    android:textColor="@color/black3"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="30dp"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/xuanze"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>











</LinearLayout>
