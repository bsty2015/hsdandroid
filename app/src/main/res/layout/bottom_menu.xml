<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <!-- 底部菜单-->
    <RelativeLayout
        android:id="@+id/layout_msg_icon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/whites"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            >


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/warmGrey2"
                />
            <RadioGroup
                android:id="@+id/radioGrouup1"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/indexButton"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/home"
                    android:layout_marginTop="5dp"
                    />

                <RadioButton
                    android:id="@+id/productButton"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/product"
                    android:layout_marginTop="5dp"
                    />

                <RadioButton
                    android:id="@+id/userHomeButoon"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/user"
                    android:layout_marginTop="5dp"
                    />

                <RadioButton
                    android:id="@+id/moreButton"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/more"
                    android:layout_marginTop="5dp"
                    />
            </RadioGroup>





            <RadioGroup
                android:id="@+id/radioGrouup2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/indexButtonText"
                    android:layout_width="36dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/indexButtonText"
                    android:textSize="12dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginTop="2dp"
                    />

                <RadioButton
                    android:id="@+id/productButtonText"
                    android:layout_width="49dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/productButtonText"
                    android:textSize="12dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginTop="2dp"
                    />

                <RadioButton
                    android:id="@+id/userHomeButoonText"
                    android:layout_width="49dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/userHomeButoonText"
                    android:textSize="12dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginTop="2dp"
                    />

                <RadioButton
                    android:id="@+id/moreButtonText"
                    android:layout_width="49dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/moreButtonText"
                    android:textSize="12dp"
                    android:textColor="@color/warmGrey3"
                    android:layout_marginTop="2dp"
                    />
            </RadioGroup>



        </LinearLayout>



    </RelativeLayout>






</RelativeLayout>
