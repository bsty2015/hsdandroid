<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/login4"
            android:layout_marginTop="32dp" />
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       >

        <EditText
            android:id="@+id/passwdInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:hint="@string/input_password"
            android:textColor="@color/black5"
            android:textColorHint="@color/pinkishGrey2"
            android:textSize="12dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:digits="1234567890"
            android:phoneNumber="true"
            android:singleLine="true"
            android:inputType="textPassword"


            />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/login2"

            />

    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white4"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="2dp"
        />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/addPasswdButton"
              android:layout_width="match_parent"
              android:layout_height="38dp"
              android:text="确定"
              android:textSize="14dp"
              android:gravity="center"
              android:textColor="@color/warmGrey7"
              android:background="@drawable/cheek_background"
              android:layout_marginTop="22dp"
              android:layout_marginRight="50dp"
              android:layout_marginLeft="50dp"
              />


      </LinearLayout>



</LinearLayout>
