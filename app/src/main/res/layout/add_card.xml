<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewBank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites2"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/whites2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/whites"
        >
        <TextView
            android:layout_width="51dp"
            android:layout_height="17dp"
            android:text="@string/notice_certified"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/dodgerblue2_background"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="left|center"
        android:background="@color/whites"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/warmGrey7"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="14dp"
            android:textColor="@color/black5"
            android:textColorHint="@color/pinkishGrey"
            android:layout_marginLeft="15dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        android:layout_marginLeft="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@color/whites"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_card"
            android:textColor="@color/warmGrey7"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />


        <EditText
            android:id="@+id/userIdentity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请输入身份证号码"
            android:textSize="14dp"
            android:textColor="@color/black5"
            android:textColorHint="@color/pinkishGrey"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/whites2"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/whites"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="48dp"
            android:layout_height="17dp"
            android:text="@string/bank_car"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/dodgerblue2_background"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            />

        </LinearLayout>

       <LinearLayout
           android:id="@+id/supportBankListView"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_weight="1"
           android:gravity="right|center"
         >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="14dp"
               android:gravity="right"
               android:src="@mipmap/liebiao"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="12dp"
               android:text="@string/view_support_bank"
               android:textSize="10dp"
               android:textColor="@color/warmGrey7"
               android:layout_marginRight="30dp"
               />



       </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       android:background="@color/whites"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:textColor="@color/warmGrey7"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />


        <EditText
                android:id="@+id/newCardNo"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="不支持信用卡"
                android:textSize="14dp"
                android:textColor="@color/black5"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/pinkishGrey"
                android:layout_marginLeft="25dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whites"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textColor="@color/warmGrey7"
            android:layout_marginLeft="25dp"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/bindTelephone"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:background="@null"
            android:hint="请输入银行预留的手机号"
            android:textSize="14dp"
            android:textColor="@color/black5"
            android:layout_marginTop="2dp"
            android:textColorHint="@color/pinkishGrey"
            android:digits="1234567890"
            android:textCursorDrawable="@drawable/color_cursor"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        >

        <LinearLayout
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="确认绑卡"
                android:textSize="14dp"
                android:textColor="@color/whites"
                android:background="@drawable/dodgerblue_background"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
