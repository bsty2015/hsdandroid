<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites2"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/whites"
        >
        <TextView
            android:layout_width="51dp"
            android:layout_height="17dp"
            android:text="@string/phone_number2"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/fadedblue_layout"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />


    <LinearLayout
        android:id="@+id/telephoneRegionView"
       android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@color/whites"
        >

    <ImageView
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:src="@mipmap/pone"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/telephoneView"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:hint="请输入手机号码"
        android:textSize="12dp"
        android:textColor="@color/black5"
        android:textColorHint="@color/pinkishGrey"
         android:layout_marginTop="2dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:digits="1234567890."
        android:singleLine="true"
        />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/whites2"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:background="@color/whites"

        >
        <TextView
            android:layout_width="51dp"
            android:layout_height="17dp"
            android:text="@string/verification"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/fadedblue_layout"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <LinearLayout
        android:id="@+id/codeRegionView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whites"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/original_password"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/codeView"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="12dp"
            android:textColor="@color/black5"
            android:layout_marginTop="2dp"
            android:textColorHint="@color/pinkishGrey"
            android:textCursorDrawable="@drawable/color_cursor"
            android:digits="1234567890."
            android:singleLine="true"
            />
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:gravity="right"
            android:layout_marginRight="20dp"
          >
          <TextView
              android:id="@+id/sendCode"
              android:layout_width="90dp"
              android:layout_height="24dp"
              android:text="获取验证码"
              android:textColor="@color/whites"
              android:textSize="10dp"
              android:gravity="center"
              android:background="@drawable/greenishteal"

              />
       </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        >

       <LinearLayout
           android:id="@+id/nextButton"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginLeft="50dp"
           android:layout_marginRight="50dp"
           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="38dp"
               android:text="@string/next_step"
               android:textSize="14dp"
               android:background="@drawable/fededblue2_layout"
               android:gravity="center"
               />
       </LinearLayout>


    </LinearLayout>



</LinearLayout>
