<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites2"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:background="@color/whites"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp"
                >
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/failed2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/failure"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/failureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/failure2"
                    android:textColor="@color/salmon"
                    android:textSize="12dp"
                    />


            </LinearLayout>


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="center"
              android:orientation="vertical"
            >

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:src="@mipmap/failed"
                />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/white2"
                  android:layout_marginLeft="26dp"
                  android:layout_marginRight="26dp"
                  android:layout_marginTop="25dp"
                  />

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_msg_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/whites"
                android:layout_alignParentBottom="true"
                >
                <LinearLayout
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/dodgerblue_background"
                    android:gravity="center"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chonshi"
                        android:textSize="14dp"
                        />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
