<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites2"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_layout"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/whites2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:background="@color/whites"
        >
        <TextView
            android:layout_width="51dp"
            android:layout_height="17dp"
            android:text="@string/new_password"
            android:textSize="10dp"
            android:textColor="@color/whites"
            android:background="@drawable/fadedblue_layout"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@color/whites"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/new_password"
            android:layout_marginLeft="20dp"
            />

         <EditText
            android:id="@+id/newPasswd"
             android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="left|center"
            android:hint="由6～18位数字,字母组成"
            android:textSize="12dp"
            android:textColor="@color/black5"
            android:textColorHint="@color/pinkishGrey"
            android:textCursorDrawable="@drawable/color_cursor"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        >
        <LinearLayout
            android:id="@+id/modifyNewPasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/put_int"
                android:textSize="14dp"
                android:background="@drawable/fededblue2_layout"
                android:gravity="center"
                />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
