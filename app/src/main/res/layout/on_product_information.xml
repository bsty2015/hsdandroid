<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites2"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/title_layout"
            layout="@layout/head_layout"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginDialog"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whites"
            android:gravity="center"
            >


        </LinearLayout>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/proDetailContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >
            <LinearLayout
                android:id="@+id/proDetailHead"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/proDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="新天地1号"
                        android:textSize="16dp"
                        android:textColor="@color/whites"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:text="预期年化收益率"
                            android:textSize="12dp"
                            android:textColor="@color/whites"
                            android:layout_marginTop="21dp"
                            android:layout_marginLeft="25dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:text="期限(天)"
                            android:textSize="12dp"
                            android:textColor="@color/whites"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="40dp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:id="@+id/proDetailRate"
                            android:layout_height="28dp"
                            android:layout_width="wrap_content"
                            android:text="0.00"
                            android:textSize="25dp"
                            android:textColor="@color/whites"
                            android:layout_marginLeft="25dp"
                            android:gravity="center"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/proDetailExtRate"
                            android:layout_height="wrap_content"
                            android:layout_width="50dp"
                            android:text="+0%"
                            android:textSize="12dp"
                            android:textColor="@color/whites"
                            android:background="@drawable/sand_background"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            >
                        </TextView>


                        <TextView
                            android:id="@+id/proDetailDuration"
                            android:layout_height="28dp"
                            android:layout_width="28dp"
                            android:text="0.00"
                            android:textSize="25dp"
                            android:textColor="@color/whites"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="56dp"
                            >
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:background="@color/whites"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="总金额 (元)"
                            android:textSize="12dp"
                            android:textColor="@color/greyishBrown2"
                            android:layout_marginTop="21dp"
                            android:layout_marginLeft="25dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="剩余可购金额 (元)"
                            android:textSize="12dp"
                            android:textColor="@color/greyishBrown2"
                            android:layout_marginTop="21dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="26dp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/proDetailAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="21dp"
                            android:textColor="@color/greyishBrown2"
                            android:layout_marginLeft="25dp"
                            />

                        <TextView
                            android:id="@+id/proDetailRemaindAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="21dp"
                            android:textColor="@color/salmon2"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="30dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@mipmap/check"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:text="即日起息"
                                android:textSize="12dp"
                                android:textColor="@color/squash"
                                android:layout_marginLeft="2dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@mipmap/check"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="1dp"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:text="本息保障"
                                android:textSize="12dp"
                                android:textColor="@color/squash"
                                android:layout_marginLeft="2dp"
                                />

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/extraAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@mipmap/check"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="1dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:text="平台加送"
                                android:textSize="12dp"
                                android:textColor="@color/squash"
                                android:layout_marginLeft="2dp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/newShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@mipmap/check"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:text="新手专享"
                                android:textSize="12dp"
                                android:textColor="@color/squash"
                                android:layout_marginLeft="2dp"
                                />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white2"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@color/whites2"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@color/whites"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="17dp"
                        android:text="风险评估"
                        android:textSize="14dp"
                        android:textColor="@color/warmGrey1"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="17dp"
                        android:text="超低风险"
                        android:textSize="14dp"
                        android:textColor="@color/greenblue"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="25dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white2"
                    />


                <LinearLayout
                    android:id="@+id/knowMoreProDetail"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@color/whites"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="了解详情"
                        android:textSize="14dp"
                        android:textColor="@color/warmGrey1"
                        android:layout_marginLeft="25dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/xuanze"
                            />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white2"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:src="@mipmap/sunshine_insurance"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户资金交易安全"
                        android:textSize="12dp"
                        android:textColor="@color/greyishBrown2"
                        android:gravity="center_vertical"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阳光保险"
                        android:textSize="12dp"
                        android:textColor="@color/squash"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="承保"
                        android:textSize="12dp"
                        android:textColor="@color/greyishBrown2"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>




            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/statusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="购买"
                    android:textSize="20dp"
                    android:textColor="@color/whites"

                    />
                <TextView
                    android:id="@+id/proLimitAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="／500元起购"
                    android:textSize="16dp"
                    android:textColor="@color/whites"
                    />


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>






</RelativeLayout>